<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">


        <Table id="idTablaProductos" items="{productosJSON>/productos}" >
            <headerToolbar>
                <OverflowToolbar width="80%">
                    <content>
                        
                        <SearchField width="40%" placeholder="{i18n>placeholder}" liveChange="onSearch"/>
                                  
                        <Label />
		                    <MenuButton text="{i18n>selecIdioma}" buttonMode="Split" width="40%" menuPosition="CenterBottom">
			                    <menu>
				                    <Menu itemSelected="onMenuAction">
					                    <MenuItem text="English" press="onPressEN" />
					                    <MenuItem text="Español" press="onPressES" />
				                    </Menu>
			                    </menu>
		                    </MenuButton>
                      
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <infoToolbar>
			<OverflowToolbar>
				<Label text="{i18n>prodDisp}"/>
			</OverflowToolbar>
		</infoToolbar>
            <columns>
                <Column>
                    <Text text="{i18n>tituloColumna1}"/>
                </Column>
                <Column>
                    <Text text="{i18n>tituloColumna2}"/>
                </Column>
                <Column>
                    <Text text="{i18n>tituloColumna3}"/>
                </Column>
                <Column>
                    <Text text="{i18n>tituloColumna4}"/>
                </Column>
                <Column>
                    <Text text="{i18n>tituloColumna5}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{productosJSON>producto}" />
                    </cells>
                    <cells>
                        <Text text="{productosJSON>proveedor}" />
                    </cells>
                    <cells>
                        <Text text="{productosJSON>tamaño}" />
                    </cells>
                    <cells>
                    <ObjectNumber
						number="{productosJSON>peso}"
						state="{
						    path: 'productosJSON>peso',
							formatter: '.Formatter.formatPeso'
						}" />

                    </cells>
                    <cells>
                        <Text text="€{path: 'productosJSON>valor', formatter: '.Formatter.formatPrecio'}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>


    </core:FragmentDefinition>